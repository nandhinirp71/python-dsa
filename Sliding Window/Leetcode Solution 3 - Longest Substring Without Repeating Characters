class Solution:
    def lengthOfLongestSubstring(self, s: str) -> int:
        l = 0
        max_len = 0
        sett = set()
        n = len(s)

        for r in range(n):
            if s[r] in sett:
                sett.remove(s[r])
                l += 1

            sett.add(s[r])

            curr_len = (r - l) + 1
            max_len = max(max_len, curr_len)

        return max_len

        # Time Complexity: O(n)
        # Space Complexity: O(1)        
