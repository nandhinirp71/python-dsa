class Solution:
    def twoSum(self, nums: List[int], target: int) -> List[int]:
        idx_map = {}

        for i in range(len(nums)):
            idx_map[nums[i]] = i

        for i in range(len(nums)):
            req_num = target - nums[i]

            if req_num in idx_map and i != idx_map[req_num]:
                return [i, idx_map[req_num]]

# Time Complexity: O(n) -> len(nums)
# Space Complexity: 0(n)
